software =
{
    version = "0.2";
    name = "secure boot update"
    images: ({
            filename = "${ROOTFS_PARTITION_NAME}";
            device = "sda4,sda5";
            type = "roundrobin";
            compressed = "zlib";
            filesystem = "ext4";
            properties: {
                        subtype = "image";
            };
    });
    files: ({
            filename = "linux.signed.efi";
            path = "linux.signed.efi";
            type = "roundrobin";
            device = "sda4->sda2,sda5->sda3";
            filesystem = "vfat";
            properties: {
                        subtype = "kernel";
            };
    })
}
